<div class="d-flex justify-content-center  mt-5">
  <div class="card shadow" style="width: 26rem">
    <div class="card-body">
        <h1 class="text-center card-title">Login</h1>
          <%= form_with(url: login_path, scope: :session) do |f| %>
            <div class="my-3">
                <%= f.email_field :email, placeholder: "メール", class: "form-control w-100" %>
            </div>

            <div class="mt-3">
                <%= f.password_field :password, placeholder: "パスワード", class: "form-control w-100" %>
            </div>

            <div class="mb-3 d-flex">
                <div class="p-2 flex-fill">
                    <%= f.check_box :remember_me %>
                    <span>Remember me</span>
                </div>
                <div class="p-2 flex-fill"></div>
                
                <div class="p-2 flex-fill text-right" style="text-align: right" >
                    <%= link_to "Sign up", new_user_path %>
                </div>
            </div>

            <%= f.submit "ログイン", class: "btn btn-primary w-100" %>
          <% end %>
    </div>
  </div>
</div>
